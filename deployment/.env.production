# Production Environment Configuration for AWS Demo
# This file is used during deployment on the EC2 instance

# Application Settings
NODE_ENV=production
PORT=5001

# Database Configuration (SQLite for minimal cost)
DATABASE_URL=file:./db.sqlite

# AI Service API Keys (UPDATE THESE WITH YOUR ACTUAL KEYS)
OPENAI_API_KEY=your-openai-key-here
SARVAM_API_KEY=your-sarvam-key-here

# Demo-specific limits to control costs
MAX_VIDEO_LENGTH=600           # 10 minutes max for demo
MAX_CONCURRENT_REQUESTS=5      # Limit concurrent processing
RATE_LIMIT_PER_MINUTE=10      # API rate limiting

# Feature flags for demo
ENABLE_TRANSLATION=true
ENABLE_BLOG_GENERATION=true  
ENABLE_SEMANTIC_SEARCH=true
ENABLE_FILE_UPLOADS=false     # Disable to save on storage costs

# Performance settings for t2.micro instance
MAX_MEMORY_USAGE=400MB        # Keep under 1GB limit
WORKER_PROCESSES=1            # Single process for minimal instance

# Security settings
CORS_ORIGIN=*                 # Allow all origins for demo
SESSION_SECRET=demo-secret-change-in-production

# Logging
LOG_LEVEL=info
LOG_TO_FILE=true

# AWS-specific settings (auto-populated by user-data script)
AWS_REGION=us-east-1
INSTANCE_TYPE=t2.micro